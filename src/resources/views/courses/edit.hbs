<div class="mt-4">
    <h1>Edit a course</h1>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Course name</label>
            <input value="{{course.name}}" name="name" type="text" class="form-control" id="name" name="xxx"
                aria-describedby="text" placeholder="Enter text">
        </div>
        <div class="form-group">
            <label for="description">Course Describe</label>
            <textarea name="description" class="form-control" id="description" aria-describedby="text"
                placeholder="Enter text">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Course videoId</label>
            <input value="{{course.videoId}}" name="videoId" type="text" class="form-control" id="videoId"
                aria-describedby="text" placeholder="Enter text">
        </div>
        <div class="form-group">
            <label for="level">Course Level</label>
            <input value="{{course.level}}" name="level" type="text" class="form-control" id="level"
                aria-describedby="text" placeholder="Enter text">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>